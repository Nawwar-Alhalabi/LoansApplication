@{
    ViewData["Title"] = "New Loan";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />

<div class="container mt-5" dir="rtl">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="mb-4 text-center">إدخال قرض جديد</h2>

            <form asp-action="Create" method="post" class="border p-4 rounded shadow bg-light">
                <div class="mb-3">
                    <label class="form-label">اسم الزبون</label>
                    <input name="customerName" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">المبلغ (100,000 – 10,000,000)</label>
                    <input name="amount" type="number" class="form-control" min="100000" max="10000000" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">عدد الأشهر</label>
                    <select name="months" class="form-select">
                        <option value="12">12 شهر</option>
                        <option value="24">24 شهر</option>
                        <option value="36">36 شهر</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary w-100">احسب القسط</button>
            </form>
        </div>
    </div>
</div>
